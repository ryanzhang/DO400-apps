pipeline {
    agent { node { label 'maven' } }
    environment { APP_NAMESPACE = 'classic-ryanzhang' }
    stages {
        stage('Test') {
            steps {
                dir('shopping-cart') {
                  withMaven(globalMavenSettingsConfig: '2bc73d01-df9a-4505-9dc3-304673486172') {
                    sh "mvn clean test"
                  }
                    // sh './mvnw clean test'
                }
            }
        }
        stage('Image Build') {
            steps {
                dir('shopping-cart') {
                    sh """
                        oc start-build security-scans \
                        --follow --wait -n ${APP_NAMESPACE}
                    """
                }
            }
        }
        stage('Security Scan') {
            steps {
                dir('shopping-cart') {
                    sh """
                        oc process -f kubefiles/security-scan-template.yml \
                        -n ${APP_NAMESPACE} \
                        -p PROJECT_NAME=${APP_NAMESPACE} \
                        -p CVE_CODE=CVE-2020-14583 \
                        | oc replace --force -n ${APP_NAMESPACE} -f -
                    """
                    sh "! ../tools/check-job-state.sh security-scans-trivy ${APP_NAMESPACE}"
                }
            }
        }
        stage('Deploy') {
            steps {
                dir('shopping-cart') {
                    sh """
                        oc patch deployment security-scans \
                        -p '{"spec": {"template": {"metadata": {"labels": {"build": "build-${BUILD_NUMBER}"}}}}}' \
                        -n ${APP_NAMESPACE}
                    """
                }
            }
        }
    }
}
